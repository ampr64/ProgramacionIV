<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AnimalSignupActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <EditText
            android:id="@+id/et_animalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/animal_signup_pup_name"
            android:inputType="textPersonName"
            android:maxLength="30" />

        <TextView
            android:id="@+id/tv_animalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_animalBreed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/animal_signup_breed"
            android:maxLength="30" />

        <TextView
            android:id="@+id/tv_animalBreed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_animalAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/animal_signup_age"
            android:inputType="number"
            android:maxLength="@integer/animalAgeMaxLength" />

        <TextView
            android:id="@+id/tv_animalAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spn_animalType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="handleOnSignupClick"
            android:text="@string/animal_signup_signPup" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>